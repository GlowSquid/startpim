{
  "name": "startpim",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix ../client",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"BROWSER=none npm run client\"",
    "deploy": "git pull origin master && npm run build --prefix client && pm2 restart 0 || pm2 serve -p 443 build --client"
  },
